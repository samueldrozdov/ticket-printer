# Environment Variables Example
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Frontend Configuration (for Netlify or build step)
# reCAPTCHA Site Key from https://www.google.com/recaptcha/admin
RECAPTCHA_SITE_KEY=YOUR_RECAPTCHA_SITE_KEY

# API URL for production (ngrok, Cloudflare tunnel, or direct Raspberry Pi URL)
# Example: https://abc123.ngrok.io or https://your-tunnel.trycloudflare.com
REACT_APP_API_URL=YOUR_API_URL_HERE

# Backend Configuration (for Raspberry Pi)
# Printer connection type: 'usb', 'serial', 'network', or 'bluetooth'
PRINTER_TYPE=usb

# USB Printer Settings
# Find vendor/product IDs with: lsusb
# Example output: Bus 001 Device 003: ID 0416:5011
USB_VENDOR=0x0416
USB_PRODUCT=0x5011

# Serial/Bluetooth Printer Settings
SERIAL_PORT=/dev/ttyUSB0

# Network Printer Settings
NETWORK_HOST=192.168.1.100
NETWORK_PORT=9100

# Application Settings
HOST=0.0.0.0
PORT=5000
DEBUG=False

# Netlify Function Configuration
# Convex deployment URL (from Convex dashboard)
# Example: https://your-project.convex.site
CONVEX_DEPLOYMENT=YOUR_CONVEX_DEPLOYMENT_URL

